<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <header>
      <% if logged_in? %>
        <%= current_user.user_name %>
      <% end %>
      <% if current_user %>
        <%= button_to 'Logout', session_url, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', new_session_url %>
        <%= link_to 'Sign up', new_user_url %>
        <!-- <button type="button" name="signup">Sign Up</button new_user_url>
        <button type="button" name="login">Log In</button new_session_url> -->
      <% end %>
    </header>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
